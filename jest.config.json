{
	"testEnvironment": "jsdom",
	"transform": {
		"^.+\\.svelte$": [
			"svelte-jester",
			{
				"preprocess": true
			}
		],
		"^.+\\.ts$": "ts-jest",
		"^.+\\.js$": "babel-jest"
	},
	"moduleFileExtensions": ["js", "ts", "svelte"],
	"moduleDirectories": ["node_modules", "frontend", "backend"],
	"moduleNameMapper": { 
		"^\\$app(.*)$": [
			"<rootDir>/.svelte-kit/runtime/app$1"
		],
		"^\\$lib/(.*)": "<rootDir>/lib/$1"
	 }
}
